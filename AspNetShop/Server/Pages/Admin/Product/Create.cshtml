@model AspNetShop.Server.Pages.Admin.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="CategoryId" name="CategoryId" asp-for="Product.CategoryId" class="control-label">CategoryId</label>
                <input name="CategoryId" asp-for="Product.CategoryId" class="form-control" />
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Name" name="Name" asp-for="Product.Name" class="control-label">Name</label>
                <input name="Name" asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Thumbnail" class="control-label">Thumbnail</label>
                <input name="Thumbnail" asp-for="Product.Thumbnail" class="form-control" />
                <span asp-validation-for="Product.Thumbnail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.TimeAdded" class="control-label">TimeAdded</label>
                <input name="TimeAdded" asp-for="Product.TimeAdded" class="form-control" />
                <span asp-validation-for="Product.TimeAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.OldPrice" class="control-label">OldPrice</label>
                <input name="OldPrice" asp-for="Product.OldPrice" class="form-control" />
                <span asp-validation-for="Product.OldPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.NewPrice" class="control-label">NewPrice</label>
                <input name="NewPrice" asp-for="Product.NewPrice" class="form-control" />
                <span asp-validation-for="Product.NewPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Rating" class="control-label">Rating</label>
                <input name="Rating" asp-for="Product.Rating" class="form-control" />
                <span asp-validation-for="Product.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label">Description</label>
                <input name="Description" asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
